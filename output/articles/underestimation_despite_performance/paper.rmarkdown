  mutate(c_gender_type=to_label(c_gender_type))|>
  distinct(idschool, .keep_all = TRUE)|>
  select(c_pv1cil,c_gender_type)

tbl_school<-dfSummary(independent_school,
               plain.ascii = FALSE,
